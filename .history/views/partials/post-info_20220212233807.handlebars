<article class="post">
  <div class="title">
    <div class='title'>{{title}}</div>
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment(s), click to view" comments.length}}</a>
  </div>
</article>