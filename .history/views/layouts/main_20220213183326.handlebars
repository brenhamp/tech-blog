<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Tech Blog</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      rel="icon"
      href="https://img.icons8.com/external-itim2101-blue-itim2101/64/000000/external-blog-copywriting-itim2101-blue-itim2101-1.png"
      type="image/x-icon"
    />
  </head>

  <body>
    <div class="wrapper">
      <header>

        <nav>
          <div class="nav">
            <a href="/">Home</a>
          </div>
          {{#if loggedIn}}
            <div class="nav">
              <a href="/dashboard">Dashboard</a>
              <button id="logout" class="btn-no-style">Logout</button>
            </div>
          {{else}}
            <div class="nav">
              <a href="/login">Login</a>
            </div>
          {{/if}}
        </nav>
        <h1>
          <a href="/" class="blog-title">My Tech Blog</a>
        </h1>
      </header>
      <main>
        {{{body}}}
      </main>
      <footer>
        Thanks for visiting!
      </footer>
    </div>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>